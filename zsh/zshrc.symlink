# Path to your oh-my-zsh configuration.
ZSH=$HOME/.oh-my-zsh
ZSH_CUSTOM=$HOME/.oh-my-zsh-custom

ZSH_THEME="agnoster"
DOTFILES=~/.dotfiles

ENABLED_PLUGINS="$HOME/.plugins.oh-my-zsh"
if [ -f $ENABLED_PLUGINS ] 
then 
    source $ENABLED_PLUGINS
fi

source $ZSH/oh-my-zsh.sh

# load other scripts from dotfiles
setopt extended_glob
for config_file ($DOTFILES/^(load_excluded)/**/*.(zsh|zsh.symlink)) source $config_file
